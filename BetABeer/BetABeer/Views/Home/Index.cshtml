@{
    ViewBag.Title = "Index";
}

<h2>I bet...</h2>
@Html.ActionLink("Create..", "Bet/Create")

<div id="data-presenter">
    <div class="bets-list">
        <div data-bind="template: { foreach: avaliableBets, afterAdd: showBetElement } " style="background-color:green;">
            <div data-bind="text: Title"></div>
            <div data-bind="text: Description"></div>
            <button data-bind="click: $parent.acceptBet"/>
        </div>
    </div>
</div>

<script type="text/javascript" src="/Scripts/jquery-1.8.2.min.js"></script>
<script type="text/javascript" src="/Scripts/knockout-2.2.0.debug.js"></script>
<script type="text/javascript" src="/Scripts/knockout.mapping-latest.debug.js"></script>
<script src="@Url.Content("Scripts/app/bet-main-vm.js")" type="text/javascript"></script>

<script src="~/Scripts/jquery.signalR-2.0.2.min.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="~/signalr/hubs"></script>

<script type="text/javascript">
    var viewModel = new BetsViewModel();
    ko.applyBindings(viewModel, document.getElementById("data-presenter"));
</script>